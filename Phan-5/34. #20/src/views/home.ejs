<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <!-- Định nghĩa bootstrap -->
    <!-- prettier-ignore -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div style="margin: 25">
      <!-- prettier-ignore -->
      <div style="display: flex; justify-content: space-between; align-items: center;">
            <h1>List Users: </h1>
            <div>
                <!-- <img src="/images/hoidanit.png" /> -->
                <!-- href = "/create-user" là gọi router "create-user" -->
                <a href="/create-user" class="btn btn-warning">Create a new user</a>
            </div>      
        </div>
      <hr />
      <div>
        <table class="table table-hover table-bordered">
          <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
          </thead>
          <tbody>
              <% users.forEach( function (user) { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.address %></td>
                  <td>
                    <div style="display: flex; gap: 10px;">
                      <!-- Thẻ a nó sẽ tương ứng với method GET của form -->
                      <!-- <a href="/handle-view-user/<%= user.id %>">View a</a> -->
                      <form action="/handle-view-user/<%= user.id %>" method="get">
                        <button type = "submit" class="btn btn-warning">View</button>    
                      </form>
                      <form action="/handle-delete-user/<%= user.id %>" method="post">
                        <!-- Nhớ có type = submit để gửi form -->
                        <button type = "submit" class="btn btn-danger">Delete</button>    
                      </form> 
                    </div>                    
                  </td>
                </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Định nghĩa bootstrap -->
    <!-- prettier-ignore -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
